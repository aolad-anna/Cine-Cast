<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_create_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="28dp"
        android:text="@string/skip"
        android:textColor="#F32D2D"
        android:textSize="18sp"
        app:textAllCaps="false" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:layout_below="@id/text_skip"
        android:layout_marginTop="-54dp"
        android:layout_marginBottom="-56dp"
        android:clipToPadding="false"
        android:overScrollMode="never" />

    <RelativeLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="#00FFFFFF"
        android:orientation="horizontal">


        <com.google.android.material.tabs.TabLayout
            android:id="@+id/pageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="161dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="284dp"
            android:layout_marginBottom="30dp"
            app:tabBackground="@drawable/onboarding_viewpager_selector_white"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp" />

        <ImageButton
            android:id="@+id/btn_next_step"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_arrow_circle_right_white_36dp"
            android:drawableTint="@color/purple_200"
            android:text="@string/next"
            android:textColor="@color/purple_200"
            android:textSize="16sp" />

    </RelativeLayout>


</RelativeLayout>